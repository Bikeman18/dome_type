<div id="main" class="main" data-src="<%= image_path('pagebk.jpg') %>">
  <div class="container">
    <div class="row">
      <div class="user-center">
        <div class="main-title">
          个人中心
        </div>
        <%= render 'user/menu' %>
        <div class="user-main">
          <%= render 'user/tab' %>
          <div class="sub-content">
            <p>昵称：<%= @user_info.nickname %></p>
            <p>
            <% if @user_info.mobile.present? %>
                手机：<%= @user_info.mobile %> <a href="<%= Settings.user_reset_mobile_link %>">修改</a>
            <% else %>
                <a href="<%= Settings.user_reset_mobile_link %>">添加手机</a>
            <% end %>
            </p>
            <p>
            <% if @user_info.email.present? %>
                邮箱：<%= @user_info.email %> <a href="<%= Settings.user_email_link %>">修改</a>
            <% else %>
                <a href="<%= Settings.user_email_link %>">添加邮箱</a>
            <% end %>
            </p>
            <% if @user_info.profile.present? %>
                <p>姓名：<%= @user_info.profile.fullname %></p>
                <p>性别：
                <% if @user_info.profile.gender == 1 %>男
                <% elsif @user_info.profile.gender == 2 %>女
                <% else %>
                <% end %>
                </p>
                <p>生日：<%= @user_info.profile.birthday %></p>
                <p>地址：<%= @user_info.profile.address %></p>
            <% end %>
            <a class="btn-robodou profile-path" href="<%= user_profile_path %>">编辑个人信息</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div class="container">
      <div class="footer">
        <a>关于我们</a>
        <span class="separator"></span>
        <a>联系我们</a>
      </div>
    </div>
  </div>
</div>
