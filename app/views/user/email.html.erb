<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-3 hidden-xs">
      <%= render 'user/menu' %>
    </div>
    <div class="col-xs-12 col-sm-9">
      <h1 class="page-header">
        我的账户
      </h1>

      <%= render 'user/tab' %>
      <div class="panel panel-default">
        <div class="panel-body">
          <% if current_user.present? && current_user.email.present? %>
              您当前邮箱为: <%= current_user.email %>,无需添加
          <% else %>
              <%= simple_form_for(current_user, html: {}, url: user_email_path, method: :post) do |f| %>
                  <div class="row">
                    <div class="col-xs-9">
                      <div class="input-group form-group email optional user_email_info">
                        <input id="user_email_info" class="email-value string email optional form-control" type="email" placeholder="请输入要添加的邮箱" name="user[email_info]" value="<%= current_user.email_info %>">
                        <span class="input-group-addon btn btn-default user-add-email" id="basic-addon2">发送验证码</span>
                      </div>
                      <div class="form-inputs">
                        <input id="email_code" class="string email required form-control" placeholder="请输入邮箱收到的验证码" type="text" name="[email_code]">
                      </div>
                      <br>

                      <div class="form-actions">
                        <%= f.submit class: 'btn btn-primary', value: '添加邮箱', 'data-disable-with' => '添加邮箱' %>
                      </div>
                    </div>
                  </div>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



